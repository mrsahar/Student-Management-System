@model Student_Management_System.Models.Entity.Student
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container my-4">
    <h2 class="mb-4">Add New Student</h2>
    <form method="post" asp-action="Edit" asp-controller="Student" class="shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter full name" required>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Enter email address" required>
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" type="number" name="Age" class="form-control" id="Age" placeholder="Enter age" min="1" required>
        </div> 
        <button type="submit" class="btn btn-success rounded-pill px-4" as>Save</button>
    </form>
</div>


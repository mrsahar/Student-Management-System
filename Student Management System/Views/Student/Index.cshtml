@model List<Student_Management_System.Models.Entity.Student>
@{
    ViewData["Title"] = "Students";
}


     <div class="container my-4">
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Welcome @ViewBag.SessionData</h1>
            <a asp-controller="Student" asp-action="EnterName" class="btn btn-outline-danger rounded-pill">
                🔒 Logout
            </a>
        </div>
    </div>
    <h3>All Students</h3>
        <div class="table-responsive">
        <table class="table table-bordered table-light align-middle shadow-sm rounded">
            <thead class="bg-white text-dark border-bottom">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>@student.Age</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                    
                </tbody>
            </table>
        </div>
        <br />
    <a asp-controller="Student" asp-action="Add" class="btn btn-dark rounded-pill px-4 push-right">➕ Add New</a>
    </div>
    <br/>
@if (TempData["std_added"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["std_added"] has been added successfully!  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
<br/>
